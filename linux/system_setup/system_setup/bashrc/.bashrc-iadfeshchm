EDITOR_PATH=`which subl`
export EDITOR="$EDITOR_PATH -w"

export PS1="${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h \[\033[01;33m\]$STY \[\033[01;34m\]\w \$\[\033[00m\] "

# alias nemo='nemo ./ && exit'




# Быстрый доступ (open+Tab,Tab) к открытию для редактирования.
alias openbashrc='subl ~/.bashrc'
alias openhosts='subl /etc/hosts'
alias opensshconfig='subl ~/.ssh/config'
alias xopen='xdg-open'




# Быстрый доступ (cd+Tab,Tab) к переходу в директорию.
