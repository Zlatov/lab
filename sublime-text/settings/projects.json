// Прочитать подробнее лучше тут https://www.sublimetext.com/docs/3/projects.html
{
  "folders": [
    {
      "path": ".",
      "binary_file_patterns": [
        "*.jpg",
        "*.jpeg",
        "*.png",
        "*.gif",
        "*.ttf",
        "*.ico",
        "*.eot",
        "*.pdf",
        "*.swf",
        "*.zip",
        "node_modules/",
        "tmp/cache/",
        "public/assets/",
        "public/packs/",
        "public/admin/assets/",
        "public/admin/packs/"
      ],
      "index_exclude_patterns": [
        "*.log",
        "*.sql",
        "*.sqlite3",
        "tmp",
        "framework"
      ],
      // Файлы и папки которые не будут отображаться в левой панели:
      "file_exclude_patterns": [
        "config/settings.yml"
      ],
      "folder_exclude_patterns": [
        "temp",
        "app/models/admin", // Найти симлинки: ls -lR ./ | grep ^l
        "public/admin"
      ],
      "follow_symlinks": false
    }
  ]
}
